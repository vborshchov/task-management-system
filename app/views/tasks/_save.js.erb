$("ul.errors").html("")
<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $('.alert').remove()
  $("#task-modal").modal("hide")
  $(".task-index").html("<%= j render @tasks, locals: {task: @task} %>")
  $('.isotope').isotope('reloadItems')
<% end %>