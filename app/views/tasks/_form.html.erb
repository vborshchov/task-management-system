<%= form_for @task, remote: true, html: { class: "form-horizontal", style: "display:inline;"} do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="form-group">
      <%= f.label :title, class: "control-label col-xs-4" %>
      <div class="col-xs-5">
        <%= f.text_field :title  , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "control-label col-xs-4" %>
      <div class="col-xs-5">
        <%= f.text_area :description , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :priority, class: "control-label col-xs-4" %>
      <div class="col-xs-5">
        <%= f.text_field :priority , class: "form-control", placeholder: "must be a number"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :due_date, class: "control-label col-xs-4" %>
      <div class="col-xs-5">
        <%= f.text_field :due_date, class: "form-control", readonly: true, data:{provide:"datepicker"}%>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>